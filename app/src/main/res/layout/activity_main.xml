<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <Button
            android:id="@+id/activity_main_become_host_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/activity_main_become_receiver_button"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/activity_main_become_receiver_button"
            android:layout_centerHorizontal="true"
            android:text="@string/activity_main_become_host"/>

        <Button
            android:id="@+id/activity_main_become_receiver_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_main_become_host_button"
            android:layout_centerHorizontal="true"
            android:text="@string/activity_main_become_receiver"
            />
    </RelativeLayout>
</FrameLayout>
